@model Recipes.Models.RecipeModel.EditRecipeViewModel

<section class="edit-section">
    <div class="container">
        <h2 class="text-center">Редактиране на рецепти</h2>
        
        <div class="edit-form">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="RecipeId" />

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Име</label>
                    <input asp-for="Title" class="form-control" placeholder="Въведете име">
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Категория</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CatagoryId" class="form-select"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Описание</label>
                    <input asp-for="Description" class="form-control" placeholder="Въведете Описание">
                </div>

                <div class="button-group">
                    <input type="submit" value="Запази" class="btn btn-success">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</section>