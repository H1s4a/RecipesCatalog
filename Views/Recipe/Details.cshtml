@model Recipes.Models.Recipe
@{
    ViewData["Title"] = "Details";
}

<div class="row text-center">
    <div class="col-md-3">
        <div class="card animate-card">
            <img src="@Model.ImagePath" alt="@Model.Title" class="recipe-image" />
            <h3>@Model.Title</h3>
            <p>@Model.Description</p>
            <p>Категория: @Model.Category?.Name</p>
            <p>Време за приготвяне: @Model.CookingTime</p>
            <a class="btn btn-info" asp-action="Index">Върни се на началната страница</a>
        </div>
    </div>
</div>

<h4>Списък с продукти:</h4>
@if (Model.RecipeIngredients != null && Model.RecipeIngredients.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Продукти</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipeIngredient in Model.RecipeIngredients)
            {
                <tr>
                    <td>@recipeIngredient.Ingredient.Name</td>
                    <td>@recipeIngredient.Quantity.ToString("0.##") грама</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Няма налични продукти за тази рецепта.</p>
}
